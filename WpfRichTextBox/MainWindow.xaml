<Window x:Class="WpfRichTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <RichTextBox x:Name="richtextbox1" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="475" TextChanged="richtextbox1_TextChanged">
            <FlowDocument>
                <Paragraph>
                    <Run x:Name="RichTextbox1" Text="Enter a Tweet" Foreground="Green"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
